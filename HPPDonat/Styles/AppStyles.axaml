<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style Selector="Window">
    <Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}" />
  </Style>

  <Style Selector="Border.sidebar">
    <Setter Property="Background" Value="{DynamicResource SidebarBackgroundBrush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource SidebarBorderBrush}" />
    <Setter Property="BorderThickness" Value="0,0,1,0" />
    <Setter Property="Padding" Value="18" />
  </Style>

  <Style Selector="Button.sidebar-button">
    <Setter Property="HorizontalAlignment" Value="Stretch" />
    <Setter Property="HorizontalContentAlignment" Value="Left" />
    <Setter Property="Margin" Value="0,0,0,8" />
    <Setter Property="Padding" Value="12,10" />
    <Setter Property="CornerRadius" Value="10" />
  </Style>

  <Style Selector="Border.card">
    <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="14" />
    <Setter Property="Padding" Value="16" />
    <Setter Property="Margin" Value="0,0,0,12" />
  </Style>

  <Style Selector="Border.section-panel">
    <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="Padding" Value="16" />
  </Style>

  <Style Selector="TextBlock.section-title">
    <Setter Property="FontSize" Value="20" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Margin" Value="0,0,0,10" />
  </Style>

  <Style Selector="TextBlock.card-title">
    <Setter Property="FontSize" Value="13" />
    <Setter Property="Opacity" Value="0.78" />
  </Style>

  <Style Selector="TextBlock.card-value">
    <Setter Property="FontSize" Value="26" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}" />
  </Style>

  <Style Selector="Button.action-button">
    <Setter Property="CornerRadius" Value="10" />
    <Setter Property="Padding" Value="14,10" />
  </Style>
</Styles>

